// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================================================
// SIMPLIFIED USER MODEL (for demo purposes)
// ============================================================================

model User {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  // Relations
  pdfs PDF[]
}

// ============================================================================
// PDF & CONTENT PROCESSING
// ============================================================================

model PDF {
  id              String    @id @default(cuid())
  userId          String
  filename        String
  filePath        String    // Local file path for stored PDF
  fileSize        Int
  mimeType        String    @default("application/pdf")
  uploadedAt      DateTime  @default(now())

  user              User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  processedContent  ProcessedContent?
  materials         Material[]
}

model ProcessedContent {
  id            String   @id @default(cuid())
  pdfId         String   @unique
  extractedText String
  textLength    Int
  processedAt   DateTime @default(now())

  pdf PDF @relation(fields: [pdfId], references: [id], onDelete: Cascade)
}

// ============================================================================
// GENERATED MATERIALS (Worksheets, Flashcards, etc.)
// ============================================================================

model Material {
  id          String       @id @default(cuid())
  pdfId       String
  type        MaterialType
  title       String
  content     String       // JSON content for the material
  createdAt   DateTime     @default(now())

  pdf PDF @relation(fields: [pdfId], references: [id], onDelete: Cascade)
}

enum MaterialType {
  WORKSHEET
  FLASHCARD
  QUIZ
}
